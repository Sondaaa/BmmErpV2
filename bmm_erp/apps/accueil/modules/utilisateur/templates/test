<script type="text/javascript">
  // $('#list_magasin').hide();
  // $('#seul_magaisn').hide();

  function getMagasin() {
    alert('dcs' + $('#test').val());
    if ($('#test').val() == 1) {
      $('#list_magasin').hide();
      $('#seul_magaisn').show();
      $('.chosen-container').attr('style', 'width:100%');
      $('.chosen-container').trigger("chosen:updated");

    } else if ($('#test').val() == 2) {
      $('#list_magasin').show();
      $('#seul_magaisn').hide();
      $('.chosen-container').attr('style', 'width:100%');
      $('.chosen-container').trigger("chosen:updated");
    } else {
      $('#list_magasin').hide();
      $('#seul_magaisn').hide();
    }
  }
</script>